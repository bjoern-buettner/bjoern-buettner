<!DOCTYPE html>
<html lang="{{ lang }}" prefix="og: http://ogp.me/ns#">
<head>
    <title>{{ title }} | Björn Büttner</title>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/styles.css"/>
    <meta name="author" content="{{ author.name }}"/>
    <meta name="description" content="{{ description }}"/>
    <meta name="og:title" content="{{ title }}"/>
    <meta name="og:description" content="{{ description }}"/>
    <meta name="og:image" content="https://bjoern-buettner.me/logo.png"/>
    <meta name="og:url" content="https://bjoern-buettner.me{{ (active ~ '/' ~ lang)|fixurl }}"/>
    <meta name="og:site_name" content="Björn Büttner"/>
    <meta name="og:locale" content="{{ lang }}"/>
    <meta name="og:type" content="{{ og_type }}"/>
    <link rel="canonical" href="https://bjoern-buettner.me{{ (active ~ '/' ~ lang)|fixurl }}"/>
    <link rel="alternate" hreflang="x-default" href="https://bjoern-buettner.me{{ (active ~ '/en')|fixurl }}"/>
    <link rel="alternate" hreflang="en" href="https://bjoern-buettner.me{{ (active ~ '/en')|fixurl }}"/>
    <link rel="alternate" hreflang="de" href="https://bjoern-buettner.me{{ (active ~ '/de')|fixurl }}"/>
    <link rel="alternate" type="application/rss+xml" href="https://bjoern-buettner.me/rss-{{ lang }}.xml"/>
</head>
<body>
<div class="header">
    <a href="/{{ lang }}"><img src="/logo.png" alt="Logo"/></a>
    <h1>Bj&ouml;rn B&uuml;ttner</h1>
    {% if lang != 'de' %}
        <a hreflang="en" href="{% if active != '/' %}{{ active }}{% endif %}/de" title="Zu Deutsch wechseln">
            <img class="small" src="/german.png" alt="Deutsch"/>
            <img class="small" src="/english.png" alt="English"/>
        </a>
    {% else %}
        <a hreflang="de" href="{% if active != '/' %}{{ active }}{% endif %}/en" title="Switch to english">
            <img class="small" src="/english.png" alt="English"/>
            <img class="small" src="/german.png" alt="Deutsch"/>
        </a>
    {% endif %}
</div>
<nav id="main-navigation">
    <ul>
        <li><a {% if active=='/' %}class="active" {% endif %}href="/{{ lang }}"
               title="{{ menu.home[1] }}">{{ menu.home[0] }}</a></li>
        <li>
            <span {% if active=='/prices' %}class="active" {% elseif active=='/blog' %}class="active"{% endif %}
               title="{{ menu.products[1] }}">{{ menu.products[0] }}</span>
            <ul>
                <li><a {% if active=='/prices' %}class="active-sub" {% endif %} href="/prices/{{ lang }}"
                       title="{{ menu.prices[1] }}">{{ menu.prices[0] }}</a></li>
                <li><a {% if active=='/blog' %}class="active-sub" {% endif %} href="/blog/{{ lang }}"
                       title="{{ menu.blog[1] }}">{{ menu.blog[0] }}</a></li>
                <li><a target="_blank" href="https://presentations.bjoern-buettner.me"
                       title="{{ menu.presentations[1] }}">{{ menu.presentations[0] }}</a></li>
            </ul>
        </li>
        <li>
            <span title="{{ menu.contact[1] }}">{{ menu.contact[0] }}</span>
            <ul>
                <li>
                    <a href="https://outlook.office365.com/owa/calendar/Bjoern-Buettner-Booking@bjoern-buettner.me/bookings/"
                       target="_blank" title="{{ menu.booking[1] }}">{{ menu.booking[0] }}</a></li>
                <li><a title="{{ menu.service[1] }}"
                       href="mailto:service@bjoern-buettner.me">{{ menu.service[0] }}</a>
                </li>
                <li><a title="{{ menu.support[1] }}"
                       href="mailto:support@bjoern-buettner.me">{{ menu.support[0] }}</a>
                </li>
            </ul>
        </li>
        <li>
            <span {% if active=='/solutions' %}class="active" {% elseif active=='/team' %}class="active"{% endif %}
               title="{{ menu.about[1] }}">{{ menu.about[0] }}</span>
            <ul>
                <li><a {% if active=='/solutions' %}class="active-sub" {% endif %} href="/solutions/{{ lang }}"
                       title="{{ menu.solutions[1] }}">{{ menu.solutions[0] }}</a></li>
                <li><a {% if active=='/team' %}class="active-sub" {% endif %} href="/team/{{ lang }}"
                       title="{{ menu.team[1] }}">{{ menu.team[0] }}</a></li>
            </ul>
        </li>
        <li>
            <span title="{{ menu.socials[1] }}">{{ menu.socials[0] }}</span>
            <ul>
                <li>
                    <a href="https://www.google.com/maps/place/Bj%C3%B6rn+B%C3%BCttner/@51.4168451,6.8539511,15z/data=!4m8!3m7!1s0x47b8c181aa157c71:0xd4a0e7a32e47292e!8m2!3d51.4168451!4d6.8539511!9m1!1b1!16s%2Fg%2F11v17jpq5g"
                       target="_blank" title="{{ menu.ratings[1] }}">{{ menu.ratings[0] }}</a></li>
                <li><a href="https://github.com/bjoern-buettner" target="_blank"
                       title="{{ menu.github[1] }}">{{ menu.github[0] }}</a></li>
                <li><a href="https://www.linkedin.com/company/bjoern-buettner/" target="_blank"
                       title="{{ menu.linkedin[1] }}">{{ menu.linkedin[0] }}</a></li>
            </ul>
        </li>
        <li><a {% if active=='/imprint' %}class="active" {% endif %} href="/imprint/{{ lang }}"
               title="{{ menu.imprint[1] }}">{{ menu.imprint[0] }}</a></li>
        {% if isProvider %}
        <li>
            <span>Administration</span>
            <ul>
                <li><a {% if active=='/admin ' %}class="active" {% endif %} href="/admin/{{ lang }}"
                       title="{{ menu.dashboard[1] }}">{{ menu.dashboard[0] }}</a></li>
                <li><a {% if active=='/admin/self' %}class="active" {% endif %} href="/admin/self/{{ lang }}"
                       title="{{ menu.self[1] }}">{{ menu.self[0] }}</a></li>
            </ul>
        </li>
        {% endif %}
    </ul>
</nav>
<div id="wrapper" class="row">
    <div id="content" class="col-8">
        {% block body %}

        {% endblock %}
    </div>
    <div id="sidebar" class="col-4">
        <div class="inner">
            <h4>Login</h4>
            <form method="post">
                <label for="email"></label><input type="email" id="email" name="email" required="required"
                                                  placeholder="E-Mail Adresse"/><br>
                <label for="password"></label><input type="password" id="password" name="password"
                                                     placeholder="Passwort" required="required"/><br>
                <input type="submit" value="Login"/><br>
                <a href="#">Zugangsdaten vergessen?</a>
            </form>
        </div>

        <div class="inner">
            <h4>Letzte Blogposts</h4>
        </div>
    </div>
</div>
<footer id="main-footer">
    <div id="inner">
        <div class="row">
            <div class="col-8"><p>Google Bewertungen</p></div>
            <div class="col-4">
                <p>Bj&ouml;rn B&uuml;ttner</p><br>
                <a href="/imprint/{{ lang }}" title="{{ menu.imprint[1] }}">{{ menu.imprint[0] }}</a><br>
                <a href="/team/{{ lang }}" title="{{ menu.team[1] }}">{{ menu.team[0] }}</a><br><br>
                <a title="{{ menu.service[1] }}" href="mailto:service@bjoern-buettner.me">{{ menu.service[0] }}</a><br>
                <a title="{{ menu.support[1] }}" href="mailto:support@bjoern-buettner.me">{{ menu.support[0] }}</a>
            </div>
        </div>
    </div>
</footer>
<div id="share-buttons">
    <ul>
        <li class="facebook" title="Share on Facebook"><a
                href="https://www.facebook.com/sharer/sharer.php?u={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}&quote={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}"
                target="_blank">f</a></li>
        <li class="twitter" title="Tweet"><a
                href="https://twitter.com/intent/tweet?source={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}&text={{ title|url_encode }}"
                target="_blank">t</a></li>
        <li class="reddit" title="Submit to Reddit"><a
                href="https://www.reddit.com/submit?url={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}&title={{ title|url_encode }}"
                target="_blank">r</a></li>
        <li class="linkedin" title="Share on LinkedIn"><a
                href="https://www.linkedin.com/shareArticle?mini=true&url={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}&title={{ title|url_encode }}&summary={{ description|url_encode }}&source={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}"
                target="_blank">li</a></li>
        <li class="email" title="Send email"><a
                href="mailto:?subject={{ title|url_encode }}&body={{ ('https://bjoern-buettner.me' ~ active ~ '/' ~ lang)|fixurl|url_encode }}"
                target="_blank">✉</a></li>
    </ul>
</div>
<!-- Matomo -->
<script>
    var _paq = window._paq = window._paq || [];
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function () {
        const u = "https://tracking.bjoern-buettner.me/";
        _paq.push(['setTrackerUrl', u + 'matomo.php']);
        _paq.push(['setSiteId', '1']);
        const d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
        g.async = true;
        g.src = u + 'matomo.js';
        g.onerror = () => {
            const i = d.createElement('img');
            i.setAttribute('src', 'https://tracking.bjoern-buettner.me/matomo.php?idsite=1&amp;rec=1');
            i.setAttribute('alt', 'tracking pixel');
            document.body.appendChild(i);
        };
        s.parentNode.insertBefore(g, s);
    })();
</script>
<noscript>
    <img src="https://tracking.bjoern-buettner.me/matomo.php?idsite=1&amp;rec=1" alt="tracking pixel"/>
</noscript>
<!-- End Matomo Code -->
<script src="/cookieinfo.js"></script>
<script>
    notifyAboutCookies("{% if lang=='en' %}We are using cookies to provide this site's functionality and improve the user experience.{% elseif lang=='de' %}Wir nutzen Cookies um die Funktionalität dieser Seite bereitzustellen und die Nutzererfahrung zu verbessern.{% endif %}");
</script>
</body>
</html>