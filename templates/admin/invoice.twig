    <li><a href="/admin/quote/1">Example Company</a> Created: 2024-01-01 Accepted: 2024-01-01</li>
</ul>
<form method="post" action="/admin/quote" enctype="multipart/form-data">
    <fieldset>
        <div>
            <label for="quote">Kostenvoranschlagsnummer</label>
            <input type="text" name="quote" pattern="[0-9]{4}BB[0-9]{4}" required/>
        </div>
        <div>
            <label for="created">Erstellt</label>
            <input type="date" name="created"/>
        </div>
        <div>
            <label for="value">Wert</label>
            <input type="number" name="value" step="0.01"/>
        </div>
        <div>
            <label for="currency">Currency</label>
            <input type="text" name="currency"/>
        </div>
        <div>
            <label for="paypal">PayPal-Link</label>
            <input type="url" name="paypal"/>
        </div>
        <div>
            <label for="document">Dokument</label>
            <input type="file" name="document" accept="application/pdf"/>
        </div>
        <div>
            <button type="submit">Neuen Kostenvoranschlag anlegen</button>
        </div>
    </fieldset>
</form>
